package atividade.pkg07.alg.tec;
/**
 *
 * @author Nick
 */
import java.util.*;
public class Atividade07AlgTec {
    public static void main(String[] args) {
       Scanner leia;
       leia = new Scanner(System.in); 
       
       float testeImc;
       float peso;
       float altura;
        
      {  
        
       System.out.println(" Insira o peso ");
       peso = leia.nextFloat();
       System.out.println(" Insira a altura ");
       altura = leia.nextFloat();
        
      }
      /* Favor usar ", vírgula " durante o teste do código.
      */        
       testeImc = peso / (altura+altura);
       if (testeImc < 18.5)
       System.out.println(" Baixo peso, o resultado do seu I.M.C. é: "+testeImc);
       
       else if (testeImc >= 18.5 && testeImc < 25)
      {
       System.out.println(" Peso Normal. ");
       System.out.print(" Seu resultado de Índice de massa corporal é:"+testeImc);
      }
       else if (testeImc >= 25 && testeImc < 30)
      {
       System.out.println(" Sobrepeso. ");
       System.out.print(" Seu resultado de Índice de massa corporal é:"+testeImc);
      }
       else
      {
       System.out.println(" Obesidade. ");
       System.out.print(" Seu resultado de Índice de massa corporal é:"+testeImc);
      }
      }    
      }
